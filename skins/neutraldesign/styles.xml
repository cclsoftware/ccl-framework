					<Metric name="native.padding.left"  value="2"/>
					<Metric name="native.padding.right" value="2"/>
				<?platform?>
			<?defined?>
		</Style>
				
		<Style name="Neutral.EditBox"     	 inherit="Neutral.TextBox">
			<?defined mobileapp?>
				<Image name="background"        	image="MobileControl"/>
				<Color name="backcolor"        		color="@Main.MobileControlColor"/>

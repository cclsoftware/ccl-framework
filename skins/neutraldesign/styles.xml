	<Styles>
		<!-- ******************************************************************************************** -->
		<!-- Styles for default look -->
		<!-- ******************************************************************************************** -->
		
		<Style name="Neutral.Button">
			<?defined mobileapp?>
				<Font  name="textfont"    			themeid="StandardUI" size="+2"/>
				<Color name="textcolor"				color="@Main.MobileControlTextColor"/>
				<Color name="textcolor.on"			color="@Main.MobileButtonTextColor"/>
				<Color name="textcolor.pressed"		color="@Main.MobileButtonTextColor"/>
				<Color name="textcolor.disabled"	color="@Main.LabelColor.Disabled"/>
				<Color name="iconcolor.on"			color="@Main.MobileButtonTextColor"/>
				<Color name="iconcolor.pressed"		color="@Main.MobileButtonTextColor"/>
				<Image name="background"			image="MobileButton"/>
				<Image name="left"       			image="MobileButtonL"/>
				<Image name="right"       			image="MobileButtonR"/>
				<Image name="middle"       			image="MobileButtonM"/>
				<Metric name="padding.left"			value="10"/>
				<Metric name="padding.right"		value="10"/>
				<Metric name="padding.top"			value="1"/>
			<?defined desktopapp?>
				<Font  name="textfont"         		themeid="StandardUI"/>
				<Color name="textcolor"        		color="@Main.LabelColor.Secondary"/>
				<Color name="textcolor.on"        	color="@Main.LabelColor.Primary.NoInvert"/>
				<Color name="textcolor.pressed"		color="@Main.LabelColor.Primary.NoInvert"/>
				<Color name="textcolor.disabled"	color="@Main.LabelColor.Disabled"/>
				<Color name="iconcolor.on"			color="@Main.LabelColor.Primary.NoInvert"/>
				<Image name="background"       		image="Button"/>
				<Image name="left"       			image="ButtonL"/>
				<Image name="right"       			image="ButtonR"/>
				<Image name="middle"       			image="ButtonM"/>
				<Metric name="padding.left"			value="6"/>
				<Metric name="padding.right"		value="6"/>
			<?defined?>
			<Metric name="useButtonMinSize"		value="1"/>
			<Metric name="buttonstyle"    		value="1"/>
			<Metric name="fill.icon"    		value="1"/>
		</Style>
		
		<Style name="Neutral.TabButton" inherit="Neutral.Button">
			<Image name="left"            	image="TabButtonL"/>
			<Image name="middle"           	image="TabButtonM"/>
			<Image name="right"            	image="TabButtonR"/>
			<Image name="background"       	image="TabButton"/>
		</Style>
		
		<Style name="Neutral.CheckBox">
			<?defined mobileapp?>
				<Font  name="textfont"         		themeid="StandardUI" size="+2"/>
				<Color name="textcolor"        		color="@Main.MobileControlTextColor"/>
				<Color name="textcolor.disabled"	color="@Main.LabelColor.Disabled"/>
				<Image name="background"			image="MobileCheckSlider"/>
<!--				<Image name="icon"					image="MobileCheckBoxIcon"/>   no icon (the slider is in background image) -->

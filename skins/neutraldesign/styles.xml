				<Align name="textalign"				align="left vcenter"/>
				<Color name="iconcolor.disabled"	color="@Main.CheckMark.DisabledColor"/>
			<?defined desktopapp?>
				<Font  name="textfont"         		themeid="StandardUI"/>
				<Color name="textcolor"        		color="@Main.LabelColor"/>
				<Color name="textcolor.disabled"	color="@Main.LabelColor.Disabled"/>
				<Image name="background"			image="CheckBoxBackground"/>
				<Image name="icon"					image="CheckBoxIcon"/>
				<Image name="iconmixed"				image="CheckBoxIconMixed"/>
				<Align name="textalign"				align="left vcenter"/>
				<Color name="iconcolor.disabled"	color="@Main.CheckMark.DisabledColor"/>
			<?defined?>
		</Style>
			
		<Style name="Neutral.RadioButton">
			<?defined mobileapp?>
				<Font  name="textfont"         		themeid="StandardUI" size="+2"/>

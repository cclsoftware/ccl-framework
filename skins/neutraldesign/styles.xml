			<?defined desktopapp?>
				<Image name="background"        	image="EditFocusBoxBackground"/>
				<Color name="backcolor"        		color="@Main.EditBoxBackColor"/>
				<Align name="textalign"        		align="center"/>
			<?defined?>
			<Color name="textcolor.placeholder"	color="@Main.LabelColor.Dimmed"/>
		</Style>
		
		<Style name="Neutral.ValueBox"      inherit="Neutral.EditBox">
			<?defined mobileapp?>
			<?defined desktopapp?>
				<Image name="background"			image="EditBoxBackground"/><!-- valuebox has system focus -->
			<?defined?>
		</Style>


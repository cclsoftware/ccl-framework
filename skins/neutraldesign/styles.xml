		<Style name="Neutral.TextBox"     	 textoptions="wordbreak"> <!-- default for multiline -->
			<?defined mobileapp?>
				<Font  name="textfont"         		themeid="StandardUI" size="+2"/>
				<Color name="textcolor"        		color="@Main.MobileControlTextColor"/>

# Doxyfile 1.8.7

@INCLUDE = ../../../../tools/doctools/makedoc/doxygen/common.doxy

#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------
PROJECT_NAME           = "CCL and Core"
PROJECT_NUMBER         =
PROJECT_BRIEF          = 
PROJECT_LOGO           =
OUTPUT_DIRECTORY       = ../doxyout/

#---------------------------------------------------------------------------
# Configuration options related to warning and progress messages
#---------------------------------------------------------------------------
WARN_LOGFILE           = ../doxyout/warnings.txt

#---------------------------------------------------------------------------
# Configuration options related to the input files
#---------------------------------------------------------------------------
INPUT                  = ../../../../ccl/public \
						 ../../../../core/public \
						 ../../../../ccl/base \
						 ../../../../ccl/app \
						 ../../../../tools/doctools/makedoc/doxygen/coredocshared.h \
                         ccldoc.h 

EXCLUDE_PATTERNS	+=	*/core/portable/*

EXCLUDE_SYMBOLS		+= CCL::__TID

#---------------------------------------------------------------------------
# Configuration options related to the preprocessor
#---------------------------------------------------------------------------
INCLUDE_PATH           = ../../../../core/public

#---------------------------------------------------------------------------
# Configuration options related to external references
#---------------------------------------------------------------------------
TAGFILES               =
GENERATE_TAGFILE       =
ALLEXTERNALS           = NO
GENERATE_HTML          = YES
GENERATE_XML           = NO
